<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:views="views.*"
		  verticalAlign="baseline" baselinePositionElement="{logo}">
	<fx:Script>
		<![CDATA[
			import mate.events.GlobalStateEvent;
			private function gotomainpage():void {
				var changeGlobalState:GlobalStateEvent = new GlobalStateEvent(GlobalStateEvent.CHANGEGLOBALSTATE);
				changeGlobalState.globalstate = "mainsearchview";
				dispatchEvent(changeGlobalState);
			}

			protected function logoClickHandler(event:MouseEvent):void
			{
				gotomainpage();
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<views:logo click="logoClickHandler(event)" />
	<s:Form id="frmSearch">
		<s:TextInput prompt="{resourceManager.getString('main', 'give_postal_code_city_or_town')}"
					 styleName="search"
					 id="txtSearch"/>
	</s:Form>
</s:HGroup>
