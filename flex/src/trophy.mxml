<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:view="views.*"
			   minWidth="955"
			   minHeight="600"
			   creationComplete="initApp()">
	<fx:Style source="assets/css/global.css" />
	<fx:Declarations>
	</fx:Declarations>

	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.resources.ResourceBundle;
			[Bindable]
			private var locales:Array = ["fr_FR", "nl_NL"];

			private function initApp():void
			{
				resourceManager.localeChain = [locales[1]];
			}

		]]>
	</fx:Script>
	<fx:Metadata>
		[ResourceBundle("main")]
	</fx:Metadata>

	<s:Group width="100%" height="100%">
		<s:HGroup width="100%" horizontalAlign="right">
			<mx:LinkButton label="{resourceManager.getString('main', 'i_am_a_psychologist')}" />
		</s:HGroup>
		<s:VGroup horizontalCenter="0" verticalCenter="0">
			<s:HGroup horizontalAlign="center" width="400" id="logo_group">
				<view:logo id="logo" />
			</s:HGroup>
			<s:TextInput width="{logo_group.width}"
						 prompt="{resourceManager.getString('main', 'give_postal_code_city_or_town')}"
						 skinClass="assets.skins.textinput"/>
			<s:HGroup horizontalAlign="right" width="{logo_group.width}">
				<mx:LinkButton label="{resourceManager.getString('main', 'advanced_search')}" horizontalCenter="100" />
			</s:HGroup>
		</s:VGroup>
		<s:HGroup width="100%" height="100%" horizontalAlign="right" verticalAlign="bottom">
			<mx:LinkButton label="{resourceManager.getString('main', 'belgium_nl')}" />
			<mx:LinkButton label="{resourceManager.getString('main', 'belgium_fr')}" />
			<mx:LinkButton label="{resourceManager.getString('main', 'france_fr')}" />
			<mx:LinkButton label="{resourceManager.getString('main', 'netherlands_nl')}" />
		</s:HGroup>
	</s:Group>
</s:Application>